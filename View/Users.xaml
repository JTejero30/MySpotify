<?xml version="1.0" encoding="utf-8" ?>
<plan:Simple xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaPracticosa.View.Users"
             
             xmlns:te="clr-namespace:PracticaPracticosa.View.Templates"
             xmlns:vm="clr-namespace:PracticaPracticosa.ViewModel"
             xmlns:plan="clr-namespace:PracticaPracticosa.Plantillas"
             BackgroundColor="#f3fbf8"
             Title="Users">
    <ContentPage.BindingContext>
        <vm:UserViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Menu">
            <MenuFlyoutItem Text="Log Out" Clicked="logOut"/>
            <MenuFlyoutItem Text="Buscar mÃºsica" Clicked="musicView"/>
            <MenuFlyoutItem Text="Favoritos" Clicked="favView"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" MaximumWidthRequest="600" BackgroundColor="#FFFFFF"  Margin="0,20,0,10" Padding="40,60,40,60">
        <CollectionView ItemsSource="{Binding ListaUsers}">
            <CollectionView.ItemTemplate>
                <DataTemplate >
                    <te:User/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </FlexLayout>
</plan:Simple>